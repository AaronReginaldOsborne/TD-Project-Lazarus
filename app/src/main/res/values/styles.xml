<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TDcolorPrimary</item>
        <item name="colorPrimaryDark">@color/TDcolorPrimaryDark</item>
        <item name="colorAccent">@color/TDcolorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextInputLayout">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>



    <style name="AppTheme.SignUpButton">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:text">Sign Up</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="AppTheme.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Text.ErrorText">
        <item name="android:textColor">@color/Red</item>
    </style>


    <style name="AppTheme.Text.HintText">
        <item name="android:textColor">@color/Dark_Gray</item>
    </style>

</resources>
